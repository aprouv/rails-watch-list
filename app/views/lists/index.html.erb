
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQI76jFbw0C2bo8k_Ollpqin24Bwv-4CUKudrXjKKNz5YSm1s7kwj4mMkaUb4o&usqp=CAc" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Create a movie list", new_list_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "See all lists", lists_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://image.shutterstock.com/image-illustration/popcorn-cinema-reel-disposable-cup-260nw-626627051.jpg')">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>

<div>
  <h2>My lists</h2>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <ul class="cards mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://image.shutterstock.com/image-illustration/popcorn-cinema-reel-disposable-cup-260nw-626627051.jpg')">
      <% @lists.each do |list| %>
        <li class="list-group-item">
          <%= link_to list.name, list_path(list) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
