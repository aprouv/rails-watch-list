<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQI76jFbw0C2bo8k_Ollpqin24Bwv-4CUKudrXjKKNz5YSm1s7kwj4mMkaUb4o&usqp=CAc" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Create a movie list", new_list_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "See all lists", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Add a bookmark",  new_list_bookmark_path(@list), class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>')">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="card-grid">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, class: 'movie-img rounded-top' %>
        <div class="card-trip-infos">
          <div class="card-title-rating">
            <h2><%= bookmark.movie.title%> - <%= bookmark.movie.rating%></h2>
            <p><%= bookmark.movie.overview%></p>
          </div>
          <h2 class="card-trip-pricing"><%= bookmark.comment%></h2>
          <%= link_to "+",  bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure ??' }, class: "card-remove-link" %>
      <%# <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> %>
        </div>
      </div>
    <% end %>

    </div>
          <%= link_to "See all lists", root_path, class: "links" %> |
          <%= link_to "Add a bookmark",  new_list_bookmark_path(@list), class: "links" %>
        </div>
      </div>
    </div>
  </div>
